<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task List</title>
    <link rel="stylesheet" href="/event_page_style.css" />
  </head>
  <body>
    <header>
      <h1>Task List </h1>
      <form id="new-task-form" method="post" action="/user/manage-event/add-task">
        <input
          type="text"
          name="taskName"
          id="new-task-input"
          placeholder="What do you have planned?"
        />
        <input type="submit" id="new-task-submit" value="Add task" />
      </form>
      <form method="get" action="/user/manage-event/upload-bill">
        <input type="submit" id="new-task-upload" value="Upload" />
      </form>
      <form method="get" action="/user/manage-event/generate-report">
        <input type="submit" id="new-task-generate" value="Generate Report" />
      </form>
    </header>
    <main>
      <section class="task-list">
        <h2>Tasks</h2>

        <div id="tasks">
          <% tasks.forEach(function(task) { %>
		  <script src="/event_page.js"></script>
		  <script>
			addTask('<%= task._id%>','<%= task.taskName %>','<%= task.isDone%>','<%= task.budget%>','<%=task.subcoordinator%>');
		  </script>
          <% }); %>
        </div>
      </section>
    </main>

    <div></div>

    <script src="/event_page.js"></script>
  </body>
</html>
